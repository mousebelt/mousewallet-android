<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:keyboard="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.VerificationActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <include layout="@layout/action_bar" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="@dimen/default_padding_2x"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_padding"
                android:adjustViewBounds="true"
                android:src="@mipmap/lock"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/txtPIN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/SubTitleText"
                    android:text="@string/enter_a_pin"/>

                <LinearLayout
                    android:id="@+id/llError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SubTitleText"
                        android:text="@string/error"
                        android:textColor="@color/colorPrimary"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/default_margin"
                        style="@style/DefaultText"
                        android:text="@string/invalid_pin"/>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgPin1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pin_size"
                    android:layout_weight="1"
                    android:src="@drawable/pin_empty"/>
                <ImageView
                    android:id="@+id/imgPin2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pin_size"
                    android:layout_weight="1"
                    android:src="@drawable/pin_empty"/>
                <ImageView
                    android:id="@+id/imgPin3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pin_size"
                    android:layout_weight="1"
                    android:src="@drawable/pin_empty"/>
                <ImageView
                    android:id="@+id/imgPin4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pin_size"
                    android:layout_weight="1"
                    android:src="@drawable/pin_empty"/>
                <ImageView
                    android:id="@+id/imgPin5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pin_size"
                    android:layout_weight="1"
                    android:src="@drawable/pin_empty"/>
                <ImageView
                    android:id="@+id/imgPin6"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/pin_size"
                    android:layout_weight="1"
                    android:src="@drawable/pin_empty"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.davidmiguel.numberkeyboard.NumberKeyboard
                android:id="@+id/numberKeyboard"
                android:layout_width="240dp"
                android:layout_height="300dp"
                keyboard:keyHeight="48dp"
                keyboard:keyPadding="8dp"
                keyboard:keyWidth="48dp"
                keyboard:keyboardType="custom"
                keyboard:leftAuxBtnText="@string/cancel"
                keyboard:leftAuxBtnTintColor="@color/cancel_text"
                keyboard:numberKeyBackground="@drawable/key_bg"
                keyboard:numberKeyFontFamily="@font/source_sans_pro_regular"
                keyboard:numberKeyTextColor="@color/key_text"
                keyboard:numberKeyTextSize="18"
                keyboard:rightAuxBtnIcon="@mipmap/enter"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>