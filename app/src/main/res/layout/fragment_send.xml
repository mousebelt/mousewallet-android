<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin_3x">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/default_padding">

                <LinearLayout
                    style="@style/DefaultItem">

                    <ImageView
                        android:id="@+id/imgSymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:id="@+id/txtSymbol"
                        android:layout_marginStart="@dimen/default_margin"
                        style="@style/SubTitleText"/>
                    <TextView
                        android:id="@+id/txtCoin"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/default_margin"
                        android:textAlignment="textStart"
                        style="@style/ItemText"/>
                    <Spinner
                        android:id="@+id/spinnerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_right"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/imgArrow"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/forward"/>
                </LinearLayout>
                <View style="@style/DefaultBorder"/>
                <LinearLayout
                    android:layout_height="@dimen/default_item_height"
                    android:layout_margin="0dp"
                    style="@style/DefaultItem">

                    <EditText
                        android:id="@+id/edtAddress"
                        android:layout_weight="1"
                        style="@style/ItemTextInput"
                        android:hint="Enter receive address"
                        android:maxLines="3"/>
                    <ImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/user"/>
                </LinearLayout>
                <View style="@style/DefaultBorder"/>
                <LinearLayout
                    style="@style/DefaultItem">

                    <EditText
                        android:id="@+id/edtSymbolFrom"
                        android:layout_weight="1"
                        style="@style/ItemTextInput"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:textAlignment="textStart"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/swap"/>
                    <EditText
                        android:id="@+id/edtSymbolTo"
                        android:layout_weight="1"
                        style="@style/ItemTextInput"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
                <View style="@style/DefaultBorder"/>
                <LinearLayout
                    android:layout_marginBottom="0dp"
                    style="@style/DefaultItem"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/txtBalance"
                        style="@style/ItemText"
                        android:textColor="@color/colorBlack"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/default_padding">

                <LinearLayout
                    android:layout_height="@dimen/default_item_height"
                    android:layout_margin="0dp"
                    style="@style/DefaultItem">

                    <EditText
                        android:id="@+id/edtMemo"
                        style="@style/ItemTextInput"
                        android:hint="Memo(optional)"
                        android:maxLines="4"/>
                </LinearLayout>
                <View style="@style/DefaultBorder"/>
                <LinearLayout
                    style="@style/DefaultItem">

                    <TextView
                        style="@style/ItemText"
                        android:text="Transaction Fee"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/txtTransactionFee"
                        android:layout_weight="1"
                        style="@style/ItemText"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
            </LinearLayout>
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                style="@style/DiscreteSeekBar"
                android:max="2"
                android:progress="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_padding"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginTop="@dimen/default_margin">

                <TextView
                    android:layout_weight="1"
                    style="@style/ItemText"
                    android:text="@string/slow"
                    android:textAlignment="textStart"/>
                <TextView
                    style="@style/ItemText"
                    android:text="@string/medium"/>
                <TextView
                    android:layout_weight="1"
                    style="@style/ItemText"
                    android:text="@string/fast"
                    android:textAlignment="textEnd"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/default_padding_2x"
                android:paddingEnd="@dimen/default_padding_2x">

                <Button
                    android:id="@+id/btnSend"
                    android:layout_gravity="center"
                    style="@style/DefaultButton"
                    android:onClick="onClick"
                    android:text="@string/send" />
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="2dp"
        android:visibility="gone"/>

</FrameLayout>
